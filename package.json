{
  "name": "react-starter-boilerplate",
  "version": "0.9.3",
  "description": "A starter kit for universal react app",
  "author": "Chonny Chu <mama.whowho@gmail.com>",
  "keywords": [
    "code splitting",
    "es6",
    "express",
    "font-awesome",
    "hot reloading",
    "production optimize",
    "react",
    "react-hot-loader",
    "react-router 4",
    "redux",
    "redux-saga",
    "styled-components",
    "universal",
    "webpack"
  ],
  "repository": {
    "url": "https://github.com/FallOutChonny/react-starter-boilerplate",
    "type": "git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FallOutChonny/react-starter-boilerplate/issues/"
  },
  "engines": {
    "npm": ">=3",
    "node": ">=5"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ],
    "*.{json,graphql}": ["prettier --write", "git add"]
  },
  "scripts": {
    "analyze": "node scripts/analyze.js",
    "build": "node scripts/build.js",
    "build:dll": "DLL=true node scripts/buildDLL.js",
    "deploy": "now --public --force",
    "flow": "flow",
    "lint": "eslint -c .eslintrc src",
    "postinstall": "npm run build:dll",
    "postsetup": "npm run build:dll",
    "precommit": "lint-staged",
    "dev": "npm run start:dev",
    "start": "npm run start:prod",
    "start:dev": "node scripts/start.js",
    "start:prod": "node build/server.js",
    "test": "node scripts/test.js --env=jsdom --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.{js,jsx}"],
    "setupFiles": [
      "<rootDir>/config/jest/setupTests.js",
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "moduleDirectories": ["node_modules", "src"],
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-react",
      "@babel/preset-stage-0",
      "@babel/preset-flow"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-syntax-dynamic-import",
      [
        "babel-plugin-styled-components",
        {
          "displayName": true,
          "ssr": true
        }
      ],
      [
        "transform-imports",
        {
          "react-router-dom": {
            "transform": "react-router-dom/${member}",
            "preventFullImport": true
          }
        }
      ],
      "transform-export-extensions",
      "react-hot-loader/babel",
      "react-loadable/babel"
    ],
    "env": {
      "production": {
        "plugins": [
          [
            "babel-plugin-transform-react-remove-prop-types",
            {
              "removeImport": true
            }
          ],
          "@babel/plugin-transform-react-constant-elements",
          "@babel/plugin-transform-react-inline-elements"
        ]
      },
      "development": {
        "presets": [
          [
            "@babel/preset-react",
            {
              "development": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "6.12"
              }
            }
          ]
        ],
        "plugins": ["dynamic-import-node"]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "extends": "airbnb",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "plugins": ["flowtype", "redux-saga", "jsx-a11y", "react", "import"],
    "rules": {
      "arrow-parens": "off",
      "arrow-body-style": "off",
      "comma-dangle": "off",
      "global-require": "off",
      "no-unreachable": "warn",
      "no-unused-vars": "warn",
      "no-console": "off",
      "function-paren-newline": "off",
      "jsx-a11y/href-no-hash": "off",
      "object-curly-newline": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-named-as-default": "off",
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "react/jsx-filename-extension": [
        "warn",
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "react/prefer-stateless-function": [
        "warn",
        {
          "ignorePureComponents": true
        }
      ]
    },
    "globals": {
      "__DEV__": true,
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DLLS__": true,
      "__DISABLE_SSR__": true
    }
  },
  "dllConfig": {
    "path": "./build/dll",
    "packages": [
      "history",
      "immutable",
      "prop-types",
      "react",
      "react-dom",
      "react-hot-loader",
      "react-loadable",
      "react-helmet-async",
      "react-redux",
      "react-router",
      "react-router-config",
      "react-router-dom",
      "react-router-redux",
      "redux",
      "redux-devtools",
      "redux-devtools-dock-monitor",
      "redux-devtools-log-monitor",
      "redux-immutable",
      "redux-saga",
      "reselect",
      "styled-components",
      "whatwg-fetch"
    ]
  },
  "appVendors": [
    "history/createBrowserHistory",
    "immutable",
    "react",
    "react-dom",
    "react-loadable",
    "react-helmet-async",
    "react-redux",
    "react-router-config",
    "react-router-redux",
    "redux",
    "redux-immutable",
    "redux-saga",
    "reselect",
    "styled-components"
  ],
  "dependencies": {
    "bootstrap": "^4.0.0",
    "express": "^4.16.2",
    "font-awesome": "^4.7.0",
    "helmet": "^3.9.0",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "lru-cache": "^4.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet-async": "0.0.5",
    "react-hot-loader": "^4.0.0",
    "react-loadable": "^5.3.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "serialize-javascript": "^1.4.0",
    "serve-favicon": "^2.5.0",
    "styled-components": "^3.2.5",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.38",
    "@babel/plugin-syntax-dynamic-import": "7.0.0-beta.38",
    "@babel/plugin-transform-react-constant-elements": "7.0.0-beta.38",
    "@babel/plugin-transform-react-inline-elements": "7.0.0-beta.38",
    "@babel/plugin-transform-runtime": "7.0.0-beta.38",
    "@babel/polyfill": "7.0.0-beta.38",
    "@babel/preset-env": "7.0.0-beta.38",
    "@babel/preset-flow": "7.0.0-beta.38",
    "@babel/preset-react": "7.0.0-beta.38",
    "@babel/preset-stage-0": "7.0.0-beta.38",
    "@babel/register": "7.0.0-beta.38",
    "@babel/runtime": "7.0.0-beta.38",
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "7.1.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.1.0",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-imports": "^1.4.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "bootstrap-loader": "^2.2.0",
    "cache-loader": "^1.1.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "2.3.0",
    "coveralls": "^3.0.0",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "^2.45.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-redux-saga": "^0.6.0",
    "extract-text-webpack-plugin": "3.0.1",
    "file-loader": "1.1.5",
    "flow-bin": "^0.57.3",
    "font-awesome-webpack": "0.0.5-beta.2",
    "fs-extra": "^4.0.2",
    "happypack": "^4.0.0",
    "html-webpack-plugin": "2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.4.0",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "lint-staged": "^6.0.1",
    "name-all-modules-plugin": "^1.0.1",
    "node-sass": "^4.5.3",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "prettier": "^1.7.4",
    "raf": "^3.4.0",
    "react-dev-utils": "4.1.0",
    "react-error-overlay": "2.0.2",
    "redux-devtools": "^3.4.1",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "resolve-url-loader": "^2.1.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "start-server-webpack-plugin": "^2.2.0",
    "style-loader": "0.19.0",
    "svgr": "^1.7.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "thread-loader": "^1.1.2",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "url-loader": "0.6.2",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^2.10.0",
    "webpack-dev-middleware": "^2.0.5",
    "webpack-dev-server": "^2.11.1",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-manifest-plugin": "1.3.2",
    "webpack-node-externals": "^1.6.0"
  }
}
