{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "jsx-a11y",
    "react",
    "import"
  ],
  "parser": "babel-eslint",
  "rules": {
    "arrow-parens": "off",
    "comma-dangle": "off",
    "global-require": "off",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "import/no-extraneous-dependencies": "off",
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": ["warn", { "ignorePureComponents": true }]
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DEVTOOLS__": true
  }
}
